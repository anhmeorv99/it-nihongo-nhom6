<p id="notice"><%= notice %></p>
        <section class="page-section bg-light" id="portfolio">
            <div class="container manga-item ">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">manga</h2>
                    <h3 class="section-subheading text-muted">List of mangas</h3>
                </div>
                <div class="row">
                      <% @mangas.each do |manga| %>
                    <div class="col-lg-4 col-sm-6 mb-4 manga-home">
                        <div class="portfolio-item">
                            <div class="portfolio-caption">
                                <div class="portfolio-caption-heading ">
                                  <p>
                                    <tr>
                                      <th>Title: </th>
                                      <td><%= manga.title %></td>
                                    </tr>
                                    </br>
                                    <tr>
                                      <th>Number of pages: </th>
                                      <td><%= manga.number_of_pages %></td>
                                    </tr>
                                    </br>
                                    <tr>
                                      <th>Price: </th>
                                      <td><%= manga.price %>$</td>
                                    </tr>
                                    </br>
                                    <tr>
                                      <th>Author: </th>
                                      <td><%= manga.author %></td>
                                      <th colspan="3"></th>
                                    </tr>
                                    </br>
                                    <tr>
                                      <th>Pulisher: </th>
                                      <td><%= manga.pulisher %></td>
                                    </tr>
                                    </br>
                                    <td><%= link_to 'Show', manga %></td>
                                    <td><%= link_to 'Edit', edit_manga_path(manga) %></td>
                                    <td> <%= link_to 'Destroy', manga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                  </p>
                                </div>

                                <div class="portfolio-caption-subheading text-muted">Illustration</div>
                            </div>
                        </div>
                    </div>
                        <% end %>

                </div>
            </div>
        </section>

<br>

<%= link_to 'New manga', new_manga_path %>
